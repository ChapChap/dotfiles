#!/usr/bin/env bash

# Prevent annoying rm -rf
if [[ "$OSTYPE" != "darwin"* ]]; then
    alias rm="mv -t /tmp"
fi

# Override vi and vim
alias vi="nvim"
alias vim="nvim"

# Missing from zsh git plugin
alias gdf="git difftool"

alias cat="bat"
alias k="kubectl"

alias ls='ls -Gh'
alias ll='ls -lGh'
alias grep='grep --colour'
